{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pawn-build",
            "type": "process", 
            "command": "${workspaceRoot}/compiler/pawncc.exe",
             "args": [
                "builder.pwn",
                "-o${workspaceFolder}/server/gamemodes_dev/new.amx",
                "-d3",
                "-;+", 
                "-(+"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/gamemode_src" 
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "pawn",
                "fileLocation": ["relative", "${workspaceFolder}/gamemode_src"],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\)\\s*:\\s*(error|warning)\\s*(\\d+):\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                }
            }
            
        },
    ]
}
